.container
  .main-wrapper
    .guest-book{:data=>{:controller=>'guest'}}
      = render :partial => "components/guest_book_header", :locals=>{:link_types=>"display", :thank_you=> false}
      .guest-book-entries-container
        -if @guest_book_entry.admin_state === "submitted"
          %p.warning
            This entry is pending approval by our gracious moderator.
        = turbo_frame_tag @guest_book_entry do
          = render :partial => 'entry', :locals => {:entry=> @guest_book_entry}