.container
  .main-wrapper
    .guest-book{:data=>{:controller=>'guest'}}
      .guest-book-heading
        %h1
          Guest Book
        = render :partial => "components/breadcrumbs"
        = link_to 'Sign the guest book', new_guest_book_entry_path
      .guest-book-entries-container
        - @guest_book_entries.each do |guest_book_entry|
          = render :partial => 'entry', :locals => {:entry=> guest_book_entry}