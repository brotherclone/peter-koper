.headings-guest-book
  .guest-book-heading-wrapper
    .mobile-menu-button{:data=>{:controller=>"mobile",:micromodal=>{:trigger=>"mobileMenu"}}}
      %a{:data=>{:action=>"click->mobile#show"}}
        =fa_icon "bars"
    .main-navigation-links.left
      .stroll
        %a{:href=> root_path, :tab=>{:index=>0}}
          Home
    .guest-book-logo
      .logo-wrapper
        =link_to image_tag("logo.png", alt:"Peter Koper, Flaneur, Strolls Along Life's Boulevard"), root_path
  -if thank_you
    .thank-you-container
      %h2
        Thank you!
      %p
        for submitting your memory. It will be up as soon as we've had a chance to make sure it's outrageous enough.
  .guest-book-sub-heading
    %h1
      Drop your stories
    = image_tag("border_ornament-horizontal.png", role: "presentation", class:"guest-book-heading-border")
    %h2
      Leave your outrageous memories and photos of Peter
    -if link_types === "default" or !link_types
      - if thank_you
        .sign-link
          = link_to 'Want to drop another story?', new_guest_book_entry_path, role: "button"
        .index-link
          = link_to 'Return home', root_path
      - else
        .sign-link
          = link_to 'Drop your story here!', new_guest_book_entry_path, role: "button"

