-@link_types = link_types

.headings-guest-book
  .guest-book-logo
    .logo-wrapper
      =inline_svg_tag("logo.svg", options={:alt=>"Peter Koper, Flaneur, Strolls Along Life's Boulevard"})
  .guest-book-back-button
    %a{:href=> root_path, :tab=>{:index=>0}}
      Back
  .guest-book-heading
    %h1
      Guest Book
    =inline_svg_tag("border.svg", class:"guest-book-heading-border")
    -if @link_types === "default" or !@link_types
      .sign-link
        = link_to 'Sign the guest book', new_guest_book_entry_path
    - elsif @link_types === "authoring"
      .show-link
        = link_to 'Cancel and discard changes',  @guest_book_entry
      .index-link
        = link_to 'Return to all entries', guest_book_entries_path
    - elsif @link_types === "display"
      .edit-link
        = link_to 'Edit your guest book entry.', edit_guest_book_entry_path(@guest_book_entry)
      .index-link
        = link_to 'Return to all entries', guest_book_entries_path
