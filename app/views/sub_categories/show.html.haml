.container
  .main-wrapper
    = render :partial=> "components/stream-heading", :locals=>{}
    .breadcrumb-wrapper
      = render :partial => "components/breadcrumbs"
    .stream-page-heading.sub-category-header
      .ornamental.ornamental-left
      .heading-text.sub-category-header-text
        %h1
          = @sub_category.name
      .ornamental.ornamental-right
    %main
      - if @memory_sub_categories
        .stream-container
          - @memory_sub_categories.each do |m|
            = render :partial=> "components/memory", :locals=> {:memory=> m.memory,
                                                                :tags=> m.memory.tags,
                                                                :categories=> m.memory.categories,
                                                                :category_ref=> @category,
                                                                :sub_category_ref=> @sub_category}