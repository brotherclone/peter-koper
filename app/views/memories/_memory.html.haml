-@memory = memory
-@tags = tags

.memory-container.col-12-sm.col-8{:style=> 'background-image: url('+ @memory.image.to_s+');'}
  .memory-label
    %h2
      = @memory.title
    %hr
    %h3
      = display_fuzzy_date(@memory.occurrence, @memory.fuzzy_date)
    %p
      = @memory.body
    %ul
      - @tags.each do |t|
        %li
          = t.name
