-@memory = memory
-@tags = tags
-@categories = categories

.memory-container{:data=>{:controller=>"stream"}}
  %div{:id=> "memory-card"+@memory.id.to_s, :data=>{:stream=>{:target=>"id"}}}
    - if !@memory.video
      .memory-image-container{:style=> 'background-image: url('+ @memory.image.to_s+');'}
    -else
      .memory-video-container
    .memory-text-container
      %h2.memory-date
        = display_fuzzy_date(@memory.occurrence, @memory.fuzzy_date)
      %h3.memory-categories
        -@categories.each do |c|
          %span.memory-category{:data=>{:controller=>"reset"}}
            = link_to c.name, stream_path(:remembering=> c.id), {:data=>{:action=>'click->reset#test'}}
      %p.memory-body
        = @memory.body
      %ul.memory-tags
        - @tags.each do |t|
          %span.memory-tag{:data=>{:controller=>"reset"}}
            = link_to t.name, stream_path(:pondering=> t.id), {:data=>{:action=>'click->reset#test'}}